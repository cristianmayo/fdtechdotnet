<section class="blog-page-breadcrumb">
    <div class="container">
        <ul>
            <li class="blog-page-breadcrumb__item">
                <a href="/blog">Blog</a>
            </li>
            <li class="blog-page-breadcrumb__divider">
                <i class="fa-solid fa-angles-right"></i>
            </li>
            <li class="blog-page-breadcrumb__item">{{ categories }}</li>
        </ul>
    </div>
</section>

<section class="blog-page-header">
    <div class="container">
        <h1 class="blog-page-header__title">{{ title }}</h1>
        <small>Published on {{ date | postDate }}</small>
    </div>
</section>

<section class="container blog-page">
    <aside>
        <div class="blog-page__toc">
            <h6>Table Of Contents</h6>
            {{ content | toc | safe }}
        </div>
    </aside>
    <article class="blog-page__content">
        {{ content | safe }}
        <div class="giscus giscus-frame"></div>
    </article>
</section>

<script src="https://giscus.app/client.js"
        data-repo="cristianmayo/fdtechdotnet"
        data-repo-id="R_kgDOJKvtLA"
        data-category="Blog"
        data-category-id="DIC_kwDOJKvtLM4CV-Z-"
        data-mapping="pathname"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="top"
        data-theme="dark"
        data-lang="en"
        crossorigin="anonymous"
        async>
</script>