---
title: Home
---

<main id="blog-list" class="container">
    <section id="recent-blog" class="timeline">
        {% for post in collections.blog | sort(false, false, date) | reverse | take(10) %}
            <div class="outer">
                <article class="card">
                {# {% if post.data.image %}
                    <div class="blog_featured-img" style="background-image: url('{{ post.data.image }}');">
                        <p>&nbsp;</p>
                    </div>
                {% endif %} #}
                    <div class="info">
                        <h2 class="title">{{ post.data.title }}</h2>
                        <small>Published on {{ post.date | postDate }}</small>
                        <p>{{ post.templateContent | excerpt }}</p>
                        <span class="spacer"></span>
                        <a href="{{ post.url }}" class="btn btn-primary">Read more</a>
                    </div>
                </article>
            </div>
        {% endfor %}
    </section>
    <aside class="mt-1">
        {% include '_sidebar.njk' %}
    </aside>
</main>