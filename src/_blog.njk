---
title: Blog
pagination:
    data: collections.blogPosts
    size: 2
    alias: pagedBlogPosts
---

{% include '_page-callout.njk' %}

<section class="container recent-blog">
    <h2>Recent Blog Posts</h2>

    <ul>
    {% for post in pagedBlogPosts | sort(false, false, date) %}
        <li>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
            <div class="small">Published on {{ post.data.date | postDate }}</div>
            <p>{{ post.templateContent | excerpt }}</p>
        </li>
    {% endfor %}
    </ul>

    <nav class="recent-page-nav">
        {% if pagination.href.previous %}
        <a href="{{ pagination.href.previous }}" class="content-nav content-nav__previous">
            <i class="fa-solid fa-angles-left fa-2x"></i>
            <span>PREVIOUS</span>
        </a>
        {% endif %}

        {% if pagination.href.next %}
        <a href="{{ pagination.href.next }}" class="content-nav content-nav__next">
            <span>NEXT</span>
            <i class="fa-solid fa-angles-right fa-2x"></i>
        </a>
        {% endif %}
    </nav>
</section>